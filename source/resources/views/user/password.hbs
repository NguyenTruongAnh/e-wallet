<div class="dashboard-wrapper user-password">
    <div class="container-fluid dashboard-content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title"><i class="fa-solid fa-lock"></i> Đổi mật khẩu </h2>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <form id="user-password__form" class="needs-validation" novalidate>
                                    <div class="row">
                                        <div class="col-md-6 offset-md-3 mb-2">
                                            <label for="user-password__form-old-password">Mật khẩu cũ:</label>
                                            <input id="user-password__form-old-password" type="password" class="form-control"
                                                placeholder="Nhập mật khẩu cũ" required />
                                            <div class="invalid-feedback">
                                                Vui lòng nhập mật khẩu cũ
                                            </div>
                                        </div>
                                        <div class="col-md-6 offset-md-3 mb-2">
                                            <label for="user-password__form-new-password">Mật khẩu mới:</label>
                                            <input id="user-password__form-new-password" type="password" class="form-control"
                                                placeholder="Nhập mật khẩu mới" required />
                                            <div class="invalid-feedback">
                                                Vui lòng nhập mật khẩu mới
                                            </div>
                                        </div>
                                        <div class="col-md-6 offset-md-3 mb-2">
                                            <label for="user-password__form-retype-password">Xác thực mật khẩu mới:</label>
                                            <input id="user-password__form-retype-password" type="password" class="form-control"
                                                placeholder="Xác thực mật khẩu mới" required />
                                            <div class="invalid-feedback">
                                                Vui lòng nhập xác thực mật khẩu mới
                                            </div>
                                        </div>

                                        <div class="col-12">
                                            <div class="d-flex justify-content-center mt-4">
                                                <button type="submit" class="btn btn-space btn-success">
                                                    Xác nhận
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{!-- Modal Message --}}
<div class="modal fade" id="user-password__modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="user-password__modal-title">Thông báo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="user-password__modal-message"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal">Xác nhận</button>
            </div>
        </div>
    </div>
</div>