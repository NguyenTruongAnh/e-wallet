<div class="reset-password">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-lg-8 col-md-10 offset-md-1 col-lg-8 offset-lg-2 col-xl-4 offset-xl-4">
                <div class="reset-password__wrapper">
                    <h2 class="reset-password__title">Đổi mật khẩu</h2>
                    <form id="submit-form" class="reset-password__form needs-validation" 
                            method="POST" action="/reset-password" novalidate>
                        <div class="form-group">
                            <input type="password" class="form-control" id="password" required
                                placeholder="Mật khẩu mới" name="password">
                            <div class="invalid-feedback">
                                Vui lòng nhập mật khẩu mới!
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="confirm-password" required
                                placeholder="Xác thực mật khẩu" name="confirm-password">
                            <div class="invalid-feedback">
                                Vui lòng nhập xác thực mật khẩu!
                            </div>
                        </div>
                        <div class="reset-password__form-control">
                            <button type="submit" class="btn btn-primary">Xác nhận</button>
                            <a href="/logout" type="btn" class="btn btn-danger w-100 mt-4">Đăng xuất</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>