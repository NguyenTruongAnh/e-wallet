<div class="recovery2">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-lg-8 col-md-10 offset-md-1 col-lg-8 offset-lg-2 col-xl-4 offset-xl-4">
                <div class="recovery2__wrapper">
                    <h2 class="recovery2__title">Quên mật khẩu</h2>
                    <form id="recovery2-submit-form-otp" class="recovery2__form needs-validation" novalidate>
                        <div class="form-group">
                            <input type="text" class="form-control" id="otp-code" required placeholder="Mã OTP">
                            <div class="invalid-feedback">
                                Vui lòng nhập mã OTP!
                            </div>
                        </div>
                        <div class="recovery2__form-control">
                            <button type="submit" class="btn btn-primary">Xác nhận</button>
                        </div>
                    </form>

                    <form id="recovery2-submit-form-password" class="recovery2__form needs-validation d-none"
                        novalidate>
                        <div class="form-group">
                            <input type="password" class="form-control" id="new-password" required
                                placeholder="Mật khẩu mới">
                            <div class="invalid-feedback">
                                Vui lòng nhập mật khẩu mới!
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="confirm-password" required
                                placeholder="Xác thực mật khẩu">
                            <div class="invalid-feedback">
                                Vui lòng xác thực mật khẩu!
                            </div>
                            <div id="invalid-recovery2-confirm-password" class="text-danger d-none"
                                style="font-size: 80%;">
                                Mật khẩu xác thực không trùng khớp!
                            </div>
                        </div>
                        <div class="recovery2__form-control">
                            <button type="submit" class="btn btn-primary">Xác nhận</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{{!-- Modal message --}}
<div id="recovery2-modal-message" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thông báo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="recovery2-modal-body__message"></p>
            </div>
            <div class="modal-footer">
                <button id="recovery2-modal-btn" type="button" class="btn btn-success" data-dismiss="modal">Xác
                    nhận</button>
            </div>
        </div>
    </div>
</div>
